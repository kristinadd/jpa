<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classes -->
        <class>jpa.domain.Message</class>
        <class>jpa.domain.Customer</class>
        <class>jpa.domain.BillingDetails</class>
        <class>jpa.domain.CreditCard</class>
        <class>jpa.domain.BankAccount</class>
        <class>jpa.domain.Item</class>
        <class>jpa.domain.Dimention</class>
        <class>jpa.domain.Weight</class>
        <class>jpa.domain.Measurment</class>
        <class>jpa.domain.Bid</class>
        

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="mypass"/>

            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <!-- Options explained:
            create - Drop and recreate tables on each startup
            create-drop - Create on startup, drop on shutdown
            update - Keep existing data, only modify schema if needed
            validate - Just validate schema, don't change anything
            none - Do nothing -->
        </properties>
    </persistence-unit>
</persistence>
